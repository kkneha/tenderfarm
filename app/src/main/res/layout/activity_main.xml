<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/a"
    tools:context=".MainActivity">


    <ImageView
        android:id="@+id/main_logo"
        android:layout_width="90dp"
        android:layout_height="0dp"
        android:layout_marginTop="46dp"
        android:layout_marginEnd="141dp"
        android:layout_marginBottom="92dp"
        android:contentDescription="@string/logo"
        app:layout_constraintBottom_toTopOf="@+id/main_reg_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logo" />

    <Button
        android:id="@+id/main_log_button"
        android:layout_width="281dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="278dp"
        android:background="@drawable/buttons"
        android:text="@string/LOGIN"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/main_reg_button"
        app:layout_constraintStart_toStartOf="@+id/main_reg_button"
        app:layout_constraintTop_toBottomOf="@+id/main_reg_button" />

    <Button
        android:id="@+id/main_reg_button"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="45dp"
        android:layout_marginBottom="29dp"
        android:background="@drawable/buttons"
        android:text="@string/REGISTER"
        app:layout_constraintBottom_toTopOf="@+id/main_log_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/main_logo" />

</androidx.constraintlayout.widget.ConstraintLayout>